<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sign_up">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:padding="8dp"
                  android:descendantFocusability="beforeDescendants"
                  android:focusableInTouchMode="true">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/imageViewa"
                android:src="@drawable/mueseum"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Your Question"
                  android:gravity="center"
                  android:textSize="16sp"
        />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:focusable="true"
                  android:hint="Enter question"
                  android:gravity="center_horizontal"
                  android:id="@+id/newquestion"
                  android:layout_marginVertical="24dp"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Input answers and choose correct answer"
                  android:gravity="center"
                  android:textSize="16sp"
        />

        <RadioGroup android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/radio_group">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_margin="10dp">
                <RadioButton android:layout_width="wrap_content"
                          android:id="@+id/correctanswer1"
                          android:layout_margin="4dp"
                          android:layout_height="wrap_content"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:focusable="true"
                          android:hint="Enter first answer"
                          android:gravity="center_horizontal"
                          android:layout_margin="10dp"
                          android:id="@+id/questionanswer1"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_margin="10dp">
                <RadioButton android:layout_width="wrap_content"
                          android:id="@+id/correctanswer2"
                          android:layout_margin="4dp"
                          android:layout_height="wrap_content"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:focusable="true"
                          android:hint="Enter second answer"
                          android:gravity="center_horizontal"
                          android:layout_marginVertical="4dp"
                          android:id="@+id/questionanswer2"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_margin="10dp">
                <RadioButton android:layout_width="wrap_content"
                          android:id="@+id/correctanswer3"
                          android:layout_margin="4dp"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="20dp"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:focusable="true"
                          android:hint="Enter third answer"
                          android:gravity="center_horizontal"
                          android:layout_marginVertical="4dp"
                          android:id="@+id/questionanswer3"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_margin="10dp">
                <RadioButton android:layout_width="wrap_content"
                          android:id="@+id/correctanswer4"
                          android:layout_margin="4dp"
                          android:layout_height="wrap_content"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:focusable="true"
                          android:hint="Enter fourth answer"
                          android:gravity="center_horizontal"
                          android:layout_marginVertical="4dp"
                          android:id="@+id/questionanswer4"/>
            </LinearLayout>
        </RadioGroup>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Check your inputs!!!"
                  android:gravity="center"
                  android:textSize="16sp"
        />
        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_start"
                android:layout_marginVertical="16dp"
                android:text="Create new question"
                android:textColor="#FFFFFF"
                android:id="@+id/button_makequestion2"
                android:textSize="16sp"
                android:gravity="center"
        />
        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_start"
                android:layout_marginVertical="16dp"
                android:text="DONE"
                android:textColor="#FFFFFF"
                android:id="@+id/button_done"
                android:textSize="16sp"
                android:gravity="center"
        />
    </LinearLayout>
</ScrollView>