<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestInfo">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/llinfo"
                    android:gravity="center">
        <TextView
                android:text="@string/quest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_questname"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_margin="8dp"
                android:textSize="36sp"
                android:textStyle="bold"
                android:gravity="center"

        />
        <TextView
                android:text="@string/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_i"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="italic"

        />

    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_above="@id/button_start"
            android:layout_below="@id/llinfo"
            >

            <TextView
                    android:text=""
                    android:background="@drawable/done_quests_list"
                    android:layout_width="match_parent"
                    android:layout_margin="12dp"
                    android:padding="8dp"
                    android:gravity="start"

                    android:layout_height="wrap_content"
                    android:id="@+id/textView" android:textColor="@color/black"
                    android:textSize="24sp"/>

    </ScrollView>
    <Button
            android:text="@string/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_start"

            android:layout_margin="16dp"
            android:background="@drawable/button_start"
            android:layout_alignParentBottom="true"
            android:textSize="24sp" android:textColor="@color/white" android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"/>




</RelativeLayout>