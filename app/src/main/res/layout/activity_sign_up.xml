<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sign_up">
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
                android:padding="8dp"
              android:descendantFocusability="beforeDescendants"
              android:focusableInTouchMode="true">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:src="@drawable/mueseum"/>
<TextView android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Enter your name and password"
          android:gravity="center"
          android:textSize="16sp"
/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:focusable="true"
              android:hint="Enter your Name"
              android:gravity="center_horizontal"
              android:id="@+id/username"
              android:layout_marginVertical="24dp"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:focusable="true"
              android:hint="Password"
              android:gravity="center_horizontal"
              android:layout_marginVertical="4dp"

              android:id="@+id/password_signup1"
    />
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:focusable="true"
              android:hint="Confirm your password"
              android:layout_marginVertical="4dp"
              android:gravity="center_horizontal"
              android:id="@+id/password_signup2"
    />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/button_start"
            android:layout_marginVertical="16dp"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:id="@+id/button_signup"
            android:textSize="16sp"
    />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Already have an account?"
    android:gravity="center"
    android:textSize="12sp"
    />
    <Button android:layout_width="70dp" android:layout_height="wrap_content"
            android:id="@+id/button_signin_back"
            android:text="Sign in"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#00B8D4"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>