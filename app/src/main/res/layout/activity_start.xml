<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:src="@drawable/ic_settings_black_24dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">

        <TextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:text="MUSEUM QUEST"
                android:textSize="30dp"
                android:shadowColor="@color/bordersColor"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:textStyle="bold"
                android:textColor="@color/colorAppTitles"
                android:id="@+id/start_title"
                android:gravity="center"
        />

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="50dp"/>

    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/start_language_selection"
            android:background="@drawable/borders_start"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Language: "
                android:textSize="20dp"
                android:textStyle="bold"
                android:shape="rectangle"
                android:textColor="@color/colorAppTitles"
        />
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENG"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:shape="rectangle"
                    android:textColor="@color/colorAppTitles"
                    android:id="@+id/start_language_"
            />
            <ImageView
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/flag_gb"
                    android:id="@+id/start_language_pic"
                    android:layout_marginLeft="5dp"
            />
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="30dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@drawable/borders_start"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Name:"
                android:textSize="24dp"
                android:textStyle="bold"
                android:shape="rectangle"
                android:textColor="@color/colorAppTitles"
                android:id="@+id/start_name_title"
        />

        <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Input your name"
                android:shape="rectangle"
                android:textColor="@color/colorAppTitles"
                android:id="@+id/start_name_input"
        />


    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="70dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical">
        <Button android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="Start"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/buttonStart"
                android:backgroundTint="@color/startButtonColor"/>
    </LinearLayout>
</LinearLayout>