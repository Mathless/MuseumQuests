<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Question">

    <TextView
            android:text="@string/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_question"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:layout_margin="20dp"
            />

    <TextView
            android:text="Question OPTION"
            android:layout_below="@id/text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_option1"
            android:textColor="@color/black"
    />
    <TextView
            android:text="Question OPTION"
            android:layout_below="@id/text_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_option2"
            android:textColor="@color/black"
    />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_layout"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="30dp">
        <Button
                android:text="Skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_skip" android:textSize="36sp"/>
        <Button
                android:text="Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_check"
                android:layout_alignParentEnd="true" android:textSize="36sp"/>
    </RelativeLayout>
</RelativeLayout>