<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:src="@drawable/ic_settings_black_24dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">

        <TextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:text="QUESTLIST"
                android:textSize="30dp"
                android:shadowColor="@color/bordersColor"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textStyle="bold"
                android:textColor="@color/colorAppTitles"
                android:id="@+id/quest_list_title"
                android:background="@drawable/rectangle"
                android:gravity="center"
        />

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="50dp"/>

    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/quest_list"/>

    </LinearLayout>

</LinearLayout>