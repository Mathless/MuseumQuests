<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.company.museumquests"
          android:targetSandboxVersion="3">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/mueseum"
            android:label="@string/app_name"
            android:roundIcon="@drawable/mueseum"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
        </activity>
        <activity
                android:name=".NewQuestionActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".NewQuestActivity"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".Sign_up"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Result"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Question"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".QuestInfo"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".QuestList"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Home"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".Start"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>